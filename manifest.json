{
  "manifest_version": 3,
  "name": "WhatsApp Web Shortcuts",
  "version": "1.0",
  "description": "Add keyboard shortcuts to WhatsApp Web message actions",
  "permissions": [
    "activeTab",
    "scripting"
  ],
  "host_permissions": [
    "https://web.whatsapp.com/*"
  ],
  "content_scripts": [
    {
      "matches": ["https://web.whatsapp.com/*"],
      "js": ["content.js"]
    }
  ],
  "icons": {
   
  }
} 